@model IEnumerable<Personel>

@{
    ViewData["Title"] = "Personeller";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Foto)</th>
                    <th>@Html.DisplayNameFor(model => model.Adi)</th>
                    <th>@Html.DisplayNameFor(model => model.Soyadi)</th>
                    <th>@Html.DisplayNameFor(model => model.Birimi)</th>
                    <th>@Html.DisplayNameFor(model => model.Gorevi)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                    <th>@Html.DisplayNameFor(model => model.Dahili)</th>
                    <th>DÜZENLE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.Foto" alt="@item.Adi" style="max-width: 150px">
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Adi)
                            </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Soyadi)
                        </td>
                        <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Birimi)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Gorevi)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Telefon)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Dahili)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Düzenle</a>
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detay</a>
                                <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Sil</a>
                            </td>
                            
                        </tr>
                }
            </tbody>
        </table>
        </div></div>