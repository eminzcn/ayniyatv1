@using ayniyatv1.Data;
@model IEnumerable<Urun>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Foto)</th>
                    <th>@Html.DisplayNameFor(model => model.Marka)</th>
                    <th>@Html.DisplayNameFor(model => model.Model)</th>
                    <th>@Html.DisplayNameFor(model => model.SeriNumarasi)</th>
                    <th>@Html.DisplayNameFor(model => model.UrunKategori)</th>
                    <th>@Html.DisplayNameFor(model => model.PersonelId)</th>
                    <th>DÜZENLE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Foto" alt="@item.Marka" style="max-width: 150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Marka)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SeriNumarasi)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UrunKategori)
@*                            @Html.DropDownListFor(m => m, Html.GetEnumSelectList(typeof(UrunKategori)))
*@                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Personel.Adi)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Düzenle</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detay</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right:25px; bottom: 75px;" class="text-white">
    <a asp-controller="Urun" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Yeni Ekle</a>
</div>